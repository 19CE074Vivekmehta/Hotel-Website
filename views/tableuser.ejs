    <section id="section2">
        <div class="container">
            <div class="row ">
                <div class="col-lg-6 cont1 ">
                    <h2> MAKE YOUR </h2>
                    <h2>RESERVATION</h2>
                </div>
                <div class="col-lg-6 cont2">
                    <form method="post" action="/">
                        <div class="form-row">
                            <div class="form-group col-md-6 text-left">
                                <label for="tableno" class="labels">Table Number</label>
                                <!-- <input type="number" class="form-control" id="tableno" placeholder="table number" name="tableno" required> -->
                           <br>
                                <select  class="custom-select mt-2 mb-2 mr-sm-2 mb-sm-0" id="tableno" name="tableno" required>
                                    <option value="" disabled selected hidden>Choose a table</option>
                                                  
        <%let Array = [];%>
        <%let uniObj = {};%>
        <%for (let i in dineList) {%>
        <%objrno = dineList[i]['tableno'];%>
        <%uniObj[objrno] = dineList[i];%>
        <%}%>
        <%for (i in uniObj) {%>
        <%Array.push(uniObj[i]);%>
        <%}%>
        
        <%console.log("tableuser page");%>
        <!-- <%console.log("data" + Array);%> -->
                                    <%Array.forEach(dine =>{%>           
                                      <%if((dine.datereserve.getDate()  < new Date().getDate() ) && (dine.datereserve.getHours() < new Date().getHours())){%>
                                          <option value=" <%=dine.tableno%>"><%=dine.tableno%></option>
                                      <%}%>
                                      <%})%>
                          
                                  </select>
                                  <p class="validate" id="room-validate" style="display:none;">Please select a table number.</p>              
                            </div>
                           
                            <div class="form-group col-md-6 text-left">
                                <label for="inputfirstname" class="labels">First name</label>
                                <input type="text" class="form-control" id="inputfirstname" placeholder="firstname" name="firstname" required>
                            </div>
                            <div class="form-group col-md-6 text-left">
                                <label for="inputlastname" class="labels">Last name</label>
                                <input type="text" class="form-control" id="inputlastname" placeholder="lastname" name="lastname" required>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6 text-left">
                                <label for="inputmobile" class="labels">Contact No</label>
                                <input type="text" class="form-control" id="inputmobile" placeholder="contact" name="contact" required>
                            </div>
                            <div class="form-group col-md-6 text-left">
                                <label for="inputtable" class="labels">Table for</label>
                                <input type="number" min="1" max="8" class="form-control" id="inputtable"
                                    placeholder="Person " name="nopersons" required>

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group col-md-6 text-left">
                                <label for="inputdate" class="labels">Date</label>
                                <input type="date" class="form-control" id="inputdate" placeholder="Date" name="datereserve" required>
                            </div>
                            <div class="form-group col-md-6 text-left">
                                <label for="inputtime" class="labels">Time</label>
                                <input type="time" class="form-control" id="timing" min="11:30" max="22:45" name="timereserve" required>
                                <small>Lunch timings : 11am to 2pm</small><br>
                                <small>Dinner timings : 7pm to 11pm</small>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary  my-2" formaction="/top">Reserve table</button>
                    </form>
